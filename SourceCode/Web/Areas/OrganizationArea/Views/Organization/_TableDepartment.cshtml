@using mojoPortal.Model.Entities
@model List<core_CCTC_Department>
<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>STT</th>
            <th>Phòng/Ban</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(Model.IndexOf(item) + 1)</td>

                    <td>@item.Name</td>
                    <td>
                        <div class='btn-group gr-nghiphep'>
                            <a href="javascript:FormDepartment(@item.ItemID)" class="btn-edit hvr-radial-out" data-id="10595" title="Chỉnh sửa"><i class="fa fa-pencil-square fa-lg"></i></a>
                            <a href="javascript:void(0)" onclick="onDeleteDepartment(@item.ItemID, this)" class="btn-remove hvr-radial-out" data-id="@item.ItemID" data-object-name="@item.Name" title="Xóa"><i class="fa fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-danger font-weight-bold">Chưa có thông tin</td>
            </tr>
        }
    </tbody>
</table>
