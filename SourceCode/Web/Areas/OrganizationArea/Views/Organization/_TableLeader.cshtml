@using mojoPortal.Model.Entities
@model List<core_CCTC_Leader>
<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
            <th>STT</th>
            <th>Hình ảnh</th>
            <th>Họ tên</th>
            <th>Chức vụ</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@(Model.IndexOf(item) + 1)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PathIMG))
                        {
                            <img src="@item.PathIMG" width="100" />
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@item.ChucVu</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>
                        <div class='btn-group gr-nghiphep'>
                            <a href="javascript:FormLeader(@item.ItemID)" class="btn-edit hvr-radial-out" data-id="10595" title="Chỉnh sửa"><i class="fa fa-pencil-square fa-lg"></i></a>
                            <a href="javascript:void(0)" onclick="onDeleteLeader(@item.ItemID, this)" class="btn-remove hvr-radial-out" data-id="@item.ItemID" data-object-name="@item.Title" title="Xóa"><i class="fa fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-danger font-weight-bold">Chưa có thông tin</td>
            </tr>
        }
    </tbody>
</table>
