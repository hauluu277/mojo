@using mojoPortal.Business.WebHelpers
@model mojoPortal.Web.Areas.MenuContextArea.Models.TypeLinkModel

@if (Model.TypeItem == MenuTypeLinkConstant.Category)
{
    <div class="form-group">
        <label class="control-label col-sm-4">Chọn category<span class="red">*</span></label>
        <div class="col-sm-8">
            @Html.DropDownList("ItemLink", Model.ListLinkItem, "--Chọn category--", new { @class = "width100 form-control require has-errored select2" })
            <em class="is-error"></em>
        </div>
    </div>
}
else if (Model.TypeItem == MenuTypeLinkConstant.Page)
{
    <div class="form-group">
        <label class="control-label col-sm-4">Chọn Page<span class="red">*</span></label>
        <div class="col-sm-8">
            @Html.DropDownList("ItemLink", Model.ListLinkItem, "--Chọn Page--", new { @class = "width100 form-control require has-errored select2" })
            <em class="is-error"></em>
        </div>
    </div>
}
else
{
    <div class="form-group">
        <label class="control-label col-sm-4">Đường dẫn(Link)</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="LinkMenu" value="@Model.UrlItem">
            <em class="is-error"></em>
        </div>
    </div>
}

